@model IEnumerable<PP4.MVC.Models.ViewCompra>

@{
    ViewBag.Title = "Reporte de Compra Por Usuario";
}
<h2>@ViewBag.Title.</h2>
<div class="row" style="text-align:left;padding:3px">
    <a href="~/Compra/Reporte" class="btn btn-outline-primary">Regresar</a>

</div>

<div class=" row">
    <div class="col-md-12">
        <table class="table">
            <thead class="thead-dark">

                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Monto Pagado</th>
                    <th>ID Persona</th>
                    <th>Nombre de Pelicula</th>
                    <th>Sala</th>
                </tr>

                @foreach (var oElemento in Model)
                {
                    <tr>
                        <td>@oElemento.ID_Compra</td>
                        <td>@oElemento.Fecha</td>
                        <td>@oElemento.Total_Pagar</td>
                        <td>@oElemento.ID_persona</td>
                        <td>@oElemento.Descripcion_peli</td>
                        <td>@oElemento.ID_sala</td>

                    </tr>
                }
</table>
    </div>
</div>


<!-- Footer -->
<footer class="w3-container w3-padding-64 w3-center w3-opacity w3-light-grey w3-xlarge">
    <i class="fa fa-facebook-official w3-hover-opacity"></i>
    <i class="fa fa-instagram w3-hover-opacity"></i>
    <i class="fa fa-snapchat w3-hover-opacity"></i>
    <i class="fa fa-pinterest-p w3-hover-opacity"></i>
    <i class="fa fa-twitter w3-hover-opacity"></i>
    <i class="fa fa-linkedin w3-hover-opacity"></i>
    <p class="w3-medium">Jeison Badilla 2019</p>
</footer>