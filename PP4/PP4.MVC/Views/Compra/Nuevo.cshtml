@model PP4.MVC.Models.ViewCompra

<!--Acá es lo que estoy recibiendo-->
@{
    ViewBag.Title = " Realizar Compra";
}

<h2>@ViewBag.Title</h2>
<a href="~/Salas/Index" class="btn btn-outline-primary">Regresar</a>
<!-- en html llamo para crear un formaulario con beginform, nuevo es el metodo, persona es por medio del controler que uso y el .post me ayuda a crear el form -->
@using (Html.BeginForm("Nuevo", "Compra", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-12">
            <!--estos son los helper de html para poder hacer el form, el form-contrl le da un estilo al textbox-->

            <div>
                @Html.ValidationMessageFor(d => d.ID_persona, null, new { @class = "danger" })
                @Html.LabelFor(d => d.ID_persona)
                @Html.TextBoxFor(d => d.ID_persona, "", new { @class = "form-control" })

            </div>
            <div>
                @Html.LabelFor(d => d.Descripcion_peli)
                @Html.TextBoxFor(d => d.Descripcion_peli, "", new { @class = "form-control" })

            </div>
            <div>
                @Html.LabelFor(d => d.ID_sala)
                @Html.TextBoxFor(d => d.ID_sala, "", new { @class = "form-control" })

            </div>
            <br />
            <div>
                @Html.LabelFor(d => d.Fecha)<br />
                <input type="date" name="fecha" min="2019-12-18"
                       max="2019-12-31" step="1">

            </div>
            <br />

            <div>
                @Html.LabelFor(d => d.Total_Pagar)<br />
                <input type="number" name="Total_Pagar" value="0" min="1"
                       max="4" step="1">

            </div>
            <br />

            <div>
                @Html.Label("Precio por Entrada")<br />
                <input type="number" name="Precio" value="3800" readonly><br>

            </div>
            <br />

            <div style="text-align:right">
                <input value="Comprar" class="w3-button w3-black w3-margin-bottom" type="submit" />
            </div>

        </div>
    </div>
}

