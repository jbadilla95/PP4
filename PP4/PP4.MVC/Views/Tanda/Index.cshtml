@model List<PP4.MVC.Models.ViewsModels.ViewTanda>

@{
    ViewBag.Title = "Datos";
}
<h2>@ViewBag.Title.</h2>
<div class="row" style="text-align:left;padding:3px">
    <a href="~/Tanda/Nuevo" class="btn btn-outline-primary">Nuevo</a>

</div>

<div class=" row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead class="thead-light">

                <tr>
                    <th>ID</th>
                    <th>ID_Pelicula</th>
                    <th>ID_Sala</th>
                    
                </tr>

                @foreach (var oElemento in Model)
                {
                    <tr>
                        <td>@oElemento.ID_tanda</td>
                        <td>@oElemento.ID_sala</td>
                        <td>@oElemento.ID_pelicula</td>
                        

                        <td>
                            <a class="btn btn-outline-success" href="~/Persona/Editar/@oElemento.ID_tanda">Editar</a>
                            <a href="~/Persona/Eliminar/@oElemento.ID_tanda" class="btn btn-outline-info" role="button">Eliminar</a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>


