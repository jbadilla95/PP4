@model PP4.MVC.Models.ViewSala

@{
    ViewBag.Title = "Nueva Sala";
}

<h2>@ViewBag.Title</h2>
<!-- en html llamo para crear un formaulario con beginform, nuevo es el metodo, persona es por medio del controler que uso y el .post me ayuda a crear el form -->
@using (Html.BeginForm("Nuevo", "Salas", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-12">
            <!--estos son los helper de html para poder hacer el form, el form-contrl le da un estilo al textbox-->
            <div>
                @Html.ValidationMessageFor(d => d.Desc_sala, null, new { @class = "danger" })
                <div />
                <div>
                    @Html.LabelFor(d => d.Desc_sala)
                    @Html.TextBoxFor(d => d.Desc_sala, "", new { @class = "form-control" })
                </div>
            </div>            
            <br />

            <div style="text-align:right">
                <input value="Guardar" class="btn btn-outline-primary" type="submit" />
            </div>

        </div>
    </div>
}

