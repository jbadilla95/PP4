@model PP4.MVC.Models.ViewSala



<!--Acá es lo que estoy recibiendo-->
@{
    ViewBag.Title = "Editar Pelicula";
}

<h2>@ViewBag.Title</h2>
<!-- en html llamo para crear un formaulario con beginform, nuevo es el metodo, persona es por medio del controler que uso y el .post me ayuda a crear el form -->
@using (Html.BeginForm("Editar", "Salas", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-12">
            <!--estos son los helper de html para poder hacer el form, el form-contrl le da un estilo al textbox-->
            @Html.HiddenFor(d => d.ID_SCantidad) <!--Me guardará el ID y se irá en la misma solicitud que estoy creando-->
            @Html.HiddenFor(d=>d.ID_Asiento)
            <div>
                @Html.ValidationMessageFor(d => d.ID_SCantidad, null, new { @class = "danger" })
                @Html.LabelFor(d => d.ID_SCantidad)
                @Html.TextBoxFor(d => d.ID_SCantidad, "", new { @class = "form-control" })

            </div>
            <div>
                @Html.LabelFor(d => d.ID_pelicula)
                @Html.TextBoxFor(d => d.ID_pelicula, "", new { @class = "form-control" })

            </div>
            <div>
                @Html.LabelFor(d => d.Cantidad_total)
                @Html.TextBoxFor(d => d.Cantidad_total, "", new { @class = "form-control" })

            </div>
            <div>
                @Html.LabelFor(d => d.Cantidad_disponible)
                @Html.TextBoxFor(d => d.Cantidad_disponible, "", new { @class = "form-control" })

            </div>

            <br />

            <div style="text-align:right">
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>

        </div>
    </div>
}

